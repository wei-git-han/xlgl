<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.config.dao.XlglMsgRemindDao">

	<select id="queryObject" resultType="com.css.app.xlgl.config.entity.XlglMsgRemind">
		select * from XLGL_MSG_REMIND where id = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.config.entity.XlglMsgRemind">
		select * from XLGL_MSG_REMIND  where 1 =1 
		<if test="type != null and type != ''">
			and TYPE = #{type}
		</if>
		<if test="state != null and state != ''">
			and STATE = #{state}
		</if>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from XLGL_MSG_REMIND 
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.config.entity.XlglMsgRemind">
		insert into XLGL_MSG_REMIND
		(
			"id", 
			"REMIND_DATE", 
			"CREATE_USER", 
			"TYPE", 
			"CREATE_DATE", 
			"STATE", 
			"CONTENT"
		)
		values
		(
			#{id}, 
			#{remindDate}, 
			#{createUser}, 
			#{type}, 
			#{createDate}, 
			#{state}, 
			#{content}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.config.entity.XlglMsgRemind">
		update XLGL_MSG_REMIND 
		<set>
			<if test="remindDate != null">"REMIND_DATE" = #{remindDate}, </if>
			<if test="createUser != null">"CREATE_USER" = #{createUser}, </if>
			<if test="type != null">"TYPE" = #{type}, </if>
			<if test="createDate != null">"CREATE_DATE" = #{createDate}, </if>
			<if test="state != null">"STATE" = #{state}, </if>
			<if test="content != null">"CONTENT" = #{content}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from XLGL_MSG_REMIND where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from XLGL_MSG_REMIND where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>