<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.config.dao.RoleSetDao">

	<select id="queryObject" resultType="com.css.app.xlgl.config.entity.RoleSet">
		select * from XLGL_ROLE_SET where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.config.entity.RoleSet">
		select * from XLGL_ROLE_SET where 1=1
		<if test="userId != null and userId != ''">
			and USER_ID = #{userId}
		</if>
		<if test="roleFlag != null and roleFlag != ''">
			and ROLE_FLAG = #{roleFlag}
		</if>
		<if test="roleParam != null and roleParam != ''">
			and ROLE_FLAG &gt; 1
		</if>
		<if test="deptId !=null and deptId !=''">
			and DEPT_ID in (select ID from BASE_APP_ORGAN start with  id=#{deptId} connect by prior id=parent_Id)
		</if>
		<if test="sort != null and sort != null">
			and SORT = #{sort}
		</if>
		order by ROLE_FLAG
		<if test="roleFlag == '1'.toString()">
			,SORT asc
		</if>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from XLGL_ROLE_SET
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.config.entity.RoleSet">
		insert into XLGL_ROLE_SET
		(
			"ID", 
			"USER_ID", 
			"USER_NAME", 
			"DEPT_ID", 
			"DEPT_NAME", 
			"ROLE_FLAG", 
			"REMARK",
			"SORT"
		)
		values
		(
			#{id}, 
			#{userId}, 
			#{userName}, 
			#{deptId}, 
			#{deptName}, 
			#{roleFlag}, 
			#{remark},
			#{sort}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.config.entity.RoleSet">
		update XLGL_ROLE_SET
		<set>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="userName != null">"USER_NAME" = #{userName}, </if>
			<if test="deptId != null">"DEPT_ID" = #{deptId}, </if>
			<if test="deptName != null">"DEPT_NAME" = #{deptName}, </if>
			<if test="roleFlag != null">"ROLE_FLAG" = #{roleFlag}, </if>
			<if test="remark != null">"REMARK" = #{remark},</if>
			<if test="sort != null">"SORT" = #{sort}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from XLGL_ROLE_SET where ID = #{value}
	</delete>
	
	<delete id="deleteByUserId">
		delete from XLGL_ROLE_SET where USER_ID = #{userId}
	</delete>
	
	<delete id="deleteBatch">
		delete from XLGL_ROLE_SET where ID in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>