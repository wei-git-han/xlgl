<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.dao.XlglWarTacticDao">

	<select id="queryObject" resultType="com.css.app.xlgl.entity.XlglWarTactic">
		select * from XLGL_WAR_TACTIC where id = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.entity.XlglWarTactic">
		select * from XLGL_WAR_TACTIC 
		where 1 = 1
		<if test="title != null and title != ''">
		 and TACTIC_TITLE like '%'||#{title}||'%'
		</if>
		order by UPDATE_DATE desc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from XLGL_WAR_TACTIC 
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.entity.XlglWarTactic">
		insert into XLGL_WAR_TACTIC
		(
			"id", 
			"ACCESSORY_FILE", 
			"CREATE_USER", 
			"UPDATE_DATE", 
			"COVER_FILE", 
			"CREATE_ORGAN_NAME", 
			"TARGET", 
			"UPDATE_USER", 
			"PUBLISH_DATE", 
			"CREATE_DATE", 
			"CONTENT", 
			"TACTIC_TITLE", 
			"VIDEO_FILE", 
			"CREATE_ORGAN_ID",
			"VIEW_NUMBER",
			"PREVIEWID",
			"PREVIEWNAME"
		)
		values
		(
			#{id}, 
			#{accessoryFile}, 
			#{createUser}, 
			#{updateDate}, 
			#{coverFile}, 
			#{createOrganName}, 
			#{target}, 
			#{updateUser}, 
			#{publishDate}, 
			#{createDate}, 
			#{content}, 
			#{tacticTitle}, 
			#{videoFile}, 
			#{createOrganId},
			#{viewNumber},
			#{preViewId},
			#{preViewName}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.entity.XlglWarTactic">
		update XLGL_WAR_TACTIC 
		<set>
<!-- 			<if test="accessoryFile != null">"ACCESSORY_FILE" = #{accessoryFile}, </if> -->
			<if test="createUser != null">"CREATE_USER" = #{createUser}, </if>
			<if test="updateDate != null">"UPDATE_DATE" = #{updateDate}, </if>
			<if test="coverFile != null">"COVER_FILE" = #{coverFile}, </if>
			<if test="createOrganName != null">"CREATE_ORGAN_NAME" = #{createOrganName}, </if>
			<if test="target != null">"TARGET" = #{target}, </if>
			<if test="updateUser != null">"UPDATE_USER" = #{updateUser}, </if>
			<if test="publishDate != null">"PUBLISH_DATE" = #{publishDate}, </if>
			<if test="createDate != null">"CREATE_DATE" = #{createDate}, </if>
			<if test="content != null">"CONTENT" = #{content}, </if>
			<if test="tacticTitle != null">"TACTIC_TITLE" = #{tacticTitle}, </if>
			<if test="videoFile != null">"VIDEO_FILE" = #{videoFile}, </if>
			<if test="viewNumber != null">"VIEW_NUMBER" = #{viewNumber},</if>
			<if test="createOrganId != null">"CREATE_ORGAN_ID" = #{createOrganId},</if>
			<if test="preViewId !=null">"PREVIEWID" = #{preViewId},</if>
			<if test="preViewName !=null">"PREVIEWNAME" = #{preViewName}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from XLGL_WAR_TACTIC where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from XLGL_WAR_TACTIC where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>