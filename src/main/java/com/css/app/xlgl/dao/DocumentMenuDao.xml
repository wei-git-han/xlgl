<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.dao.DocumentMenuDao">

	<select id="queryObject" resultType="com.css.app.xlgl.entity.DocumentMenu">
		select * from DOCUMENT_MENU where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.entity.DocumentMenu">
		select * from DOCUMENT_MENU 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DOCUMENT_MENU 
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.entity.DocumentMenu">
		insert into DOCUMENT_MENU
		(
			"ID", 
			"MENU_NAME", 
			"SORT", 
			"CREATED_TIME", 
			"LSSJ_PAGE", 
			"CENTER_PAGE", 
			"MENU_LEVEL", 
			"is_grant", 
			"DISPLAY_NAME", 
			"DEFAULT_PAGE", 
			"PARENT_ID"
		)
		values
		(
			#{id}, 
			#{menuName}, 
			#{sort}, 
			#{createdTime}, 
			#{lssjPage}, 
			#{centerPage}, 
			#{menuLevel}, 
			#{isGrant}, 
			#{displayName}, 
			#{defaultPage}, 
			#{parentId}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.entity.DocumentMenu">
		update DOCUMENT_MENU 
		<set>
			<if test="menuName != null">"MENU_NAME" = #{menuName}, </if>
			<if test="sort != null">"SORT" = #{sort}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="lssjPage != null">"LSSJ_PAGE" = #{lssjPage}, </if>
			<if test="centerPage != null">"CENTER_PAGE" = #{centerPage}, </if>
			<if test="menuLevel != null">"MENU_LEVEL" = #{menuLevel}, </if>
			<if test="isGrant != null">"is_grant" = #{isGrant}, </if>
			<if test="displayName != null">"DISPLAY_NAME" = #{displayName}, </if>
			<if test="defaultPage != null">"DEFAULT_PAGE" = #{defaultPage}, </if>
			<if test="parentId != null">"PARENT_ID" = #{parentId}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DOCUMENT_MENU where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from DOCUMENT_MENU where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>