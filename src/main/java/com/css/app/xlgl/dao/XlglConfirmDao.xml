<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.dao.XlglConfirmDao">

	<select id="queryObject" resultType="com.css.app.xlgl.entity.XlglConfirm">
		select * from XLGL_CONFIRM where ID = #{value}
	</select>

	<select id="queryPerDeptInfo" resultType="com.css.app.xlgl.dto.XlglConfirmDto">
		select
        DEPTNAME,
        DEPTID,
        CONFIRM_COUNT,
        NO_CONFIRM_COUNT,
        QJ_CONNT,
        STATUS
        from
        XLGL_CONFIRM where
        DEPTID in
        ( select   t.id  from   BASE_APP_ORGAN t start  with ID  = #{deptId} and ISDELETE=0 connect by prior ID = PARENT_ID  )
        and INFOID = #{infoId}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.entity.XlglConfirm">
		select * from XLGL_CONFIRM 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from XLGL_CONFIRM 
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.entity.XlglConfirm">
		insert into XLGL_CONFIRM
		(
			"ID", 
			"DEPTID", 
			"INFOID", 
			"DEPTNAME", 
			"STATUS", 
			"CREATOR", 
			"CREATEDTIME", 
			"CREATORNAME",
			"CONFIRM_COUNT",
			"NO_CONFIRM_COUNT",
			"QJ_CONNT"
		)
		values
		(
			#{id}, 
			#{deptid}, 
			#{infoid}, 
			#{deptname}, 
			#{status}, 
			#{creator}, 
			#{createdtime}, 
			#{creatorname},
			#{confirmCount},
			#{noConfirmCount},
			#{qjCount}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.entity.XlglConfirm">
		update XLGL_CONFIRM 
		<set>
			<if test="deptid != null">"DEPTID" = #{deptid}, </if>
			<if test="infoid != null">"INFOID" = #{infoid}, </if>
			<if test="deptname != null">"DEPTNAME" = #{deptname}, </if>
			<if test="status != null">"STATUS" = #{status}, </if>
			<if test="creator != null">"CREATOR" = #{creator}, </if>
			<if test="createdtime != null">"CREATEDTIME" = #{createdtime}, </if>
			<if test="creatorname != null">"CREATORNAME" = #{creatorname}</if>
			<if test="confirmCount != null">"CONFIRM_COUNT" = #{confirmCount}</if>
			<if test="noConfirmCount != null">"NO_CONFIRM_COUNT" = #{noConfirmCount}</if>
			<if test="qjCount != null">"QJ_CONNT" = #{qjCount}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from XLGL_CONFIRM where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from XLGL_CONFIRM where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>