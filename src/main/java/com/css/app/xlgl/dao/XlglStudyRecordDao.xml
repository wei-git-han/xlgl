<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.dao.XlglStudyRecordDao">

	<select id="queryObject" resultType="com.css.app.xlgl.entity.XlglStudyRecord">
		select * from XLGL_STUDY_RECORD where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.entity.XlglStudyRecord">
		select * from XLGL_STUDY_RECORD 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from XLGL_STUDY_RECORD 
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.entity.XlglStudyRecord">
		insert into XLGL_STUDY_RECORD
		(
			"ID", 
			"USER_ID", 
			"USER_NAME", 
			"DEPT_NAME", 
			"CREATED_TIME",
			"SCORE",
			"JUDGE"
		)
		values
		(
			#{id}, 
			#{userId}, 
			#{userName}, 
			#{deptName}, 
			#{createdTime},
			#{score},
			#{judge}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.entity.XlglStudyRecord">
		update XLGL_STUDY_RECORD 
		<set>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="userName != null">"USER_NAME" = #{userName}, </if>
			<if test="deptName != null">"DEPT_NAME" = #{deptName}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime},</if>
			<if test="score != null">"SCORE" = #{score},</if>
			<if test="judge != null">"JUDGE" = #{judge}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from XLGL_STUDY_RECORD where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from XLGL_STUDY_RECORD where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>


</mapper>