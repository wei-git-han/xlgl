<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.dao.XlglSafetyAnalyseDao">

	<select id="queryObject" resultType="com.css.app.xlgl.entity.XlglSafetyAnalyse">
		select * from XLGL_SAFETY_ANALYSE where id = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.entity.XlglSafetyAnalyse">
		select * from XLGL_SAFETY_ANALYSE 
		where 1 = 1
		<if test="quarter != null and quarter == 1">
			and to_char(UPLOAD_DATE,'yyyy') = to_char(sysdate,'yyyy') 
			and (to_char(UPLOAD_DATE,'MM') = 1 or to_char(UPLOAD_DATE,'MM') = 2 or to_char(UPLOAD_DATE,'MM') = 3)
		</if>
		<if test="quarter != null and quarter == 2">
			and to_char(UPLOAD_DATE,'yyyy') = to_char(sysdate,'yyyy') 
			and (to_char(UPLOAD_DATE,'MM') = 4 or to_char(UPLOAD_DATE,'MM') = 5 or to_char(UPLOAD_DATE,'MM') = 6)
		</if>
			<if test="quarter != null and quarter == 3">
			and to_char(UPLOAD_DATE,'yyyy') = to_char(sysdate,'yyyy') 
			and (to_char(UPLOAD_DATE,'MM') = 7 or to_char(UPLOAD_DATE,'MM') = 8 or to_char(UPLOAD_DATE,'MM') = 9)
		</if>
		<if test="quarter != null and quarter == 4">
			and to_char(UPLOAD_DATE,'yyyy') = to_char(sysdate,'yyyy') 
			and (to_char(UPLOAD_DATE,'MM') = 10 or to_char(UPLOAD_DATE,'MM') = 11 or to_char(UPLOAD_DATE,'MM') = 12)
		</if>
		<if test="organId != null">
			and ORGAN_ID = #{organId}
		</if>
		order by UPLOAD_DATE desc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from XLGL_SAFETY_ANALYSE 
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.entity.XlglSafetyAnalyse">
		insert into XLGL_SAFETY_ANALYSE
		(
			"id", 
			"UPLOAD_USER", 
			"CREATE_USER", 
			"UPDATE_DATE", 
			"STATUS", 
			"UPLOAD_DATE", 
			"ORGAN_ID", 
			"CREATE_USERNAME", 
			"UPDATE_USER", 
			"ORGAN_NAME", 
			"CREATE_DATE", 
			"CONTENT",
			"FILE_IDS",
			"FILE_NAME"
		)
		values
		(
			#{id}, 
			#{uploadUser}, 
			#{createUser}, 
			#{updateDate}, 
			#{status}, 
			#{uploadDate}, 
			#{organId}, 
			#{createUsername}, 
			#{updateUser}, 
			#{organName}, 
			#{createDate}, 
			#{content},
			#{fileIds},
			#{fileName}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.entity.XlglSafetyAnalyse">
		update XLGL_SAFETY_ANALYSE 
		<set>
			<if test="uploadUser != null">"UPLOAD_USER" = #{uploadUser}, </if>
			<if test="createUser != null">"CREATE_USER" = #{createUser}, </if>
			<if test="updateDate != null">"UPDATE_DATE" = #{updateDate}, </if>
			<if test="status != null">"STATUS" = #{status}, </if>
			<if test="uploadDate != null">"UPLOAD_DATE" = #{uploadDate}, </if>
			<if test="organId != null">"ORGAN_ID" = #{organId}, </if>
			<if test="createUsername != null">"CREATE_USERNAME" = #{createUsername}, </if>
			<if test="updateUser != null">"UPDATE_USER" = #{updateUser}, </if>
			<if test="organName != null">"ORGAN_NAME" = #{organName}, </if>
			<if test="createDate != null">"CREATE_DATE" = #{createDate}, </if>
			<if test="content != null">"CONTENT" = #{content},</if>
			<if test="fileName != null">"FILE_NAME" = #{fileName},</if>
			<if test="fileIds != null">"FILE_IDS" = #{fileIds}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from XLGL_SAFETY_ANALYSE where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from XLGL_SAFETY_ANALYSE where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>