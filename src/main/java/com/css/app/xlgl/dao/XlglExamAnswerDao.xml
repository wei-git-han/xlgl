<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.dao.XlglExamAnswerDao">

	<select id="queryObject" resultType="com.css.app.xlgl.entity.XlglExamAnswer">
		select * from XLGL_EXAM_ANSWER where id = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.entity.XlglExamAnswer">
		select * from XLGL_EXAM_ANSWER 
		where 1=1
		<if test="examineId != null and examineId !=''">
			 and EXAMINE_ID = #{examineId}
		</if>
		<if test="replyUserId != null and replyUserId !=''">
			 and REPLY_USER_ID = #{replyUserId}
		</if>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from XLGL_EXAM_ANSWER 
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.entity.XlglExamAnswer">
		insert into XLGL_EXAM_ANSWER
		(
			"id", 
			"EXAMINE_ID", 
			"EXAMINE_TOPIC_ID", 
			"TOPIC_COLUMN", 
			"TOPIC_TYPE", 
			"TOPIC_OPTION", 
			"TOPIC_RESULT", 
			"REPLY", 
			"REPLY_USER_ID", 
			"CREATE_DATE", 
			"UPDATE_DATE", 
			"STATUS", 
			"CORRECT_STATUS", 
			"ORGAN_ID", 
			"ORGAN_NAME", 
			"FRACTION", 
			"REPLY_USER_NAME", 
			"MAIN_ANSWER_ID"
		)
		values
		(
			#{id}, 
			#{examineId}, 
			#{examineTopicId}, 
			#{topicColumn}, 
			#{topicType}, 
			#{topicOption}, 
			#{topicResult}, 
			#{reply}, 
			#{replyUserId}, 
			#{createDate}, 
			#{updateDate}, 
			#{status}, 
			#{correctStatus}, 
			#{organId}, 
			#{organName}, 
			#{fraction}, 
			#{replyUserName}, 
			#{mainAnswerId}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.entity.XlglExamAnswer">
		update XLGL_EXAM_ANSWER 
		<set>
			<if test="examineId != null">"EXAMINE_ID" = #{examineId}, </if>
			<if test="examineTopicId != null">"EXAMINE_TOPIC_ID" = #{examineTopicId}, </if>
			<if test="topicColumn != null">"TOPIC_COLUMN" = #{topicColumn}, </if>
			<if test="topicType != null">"TOPIC_TYPE" = #{topicType}, </if>
			<if test="topicOption != null">"TOPIC_OPTION" = #{topicOption}, </if>
			<if test="topicResult != null">"TOPIC_RESULT" = #{topicResult}, </if>
			<if test="reply != null">"REPLY" = #{reply}, </if>
			<if test="replyUserId != null">"REPLY_USER_ID" = #{replyUserId}, </if>
			<if test="createDate != null">"CREATE_DATE" = #{createDate}, </if>
			<if test="updateDate != null">"UPDATE_DATE" = #{updateDate}, </if>
			<if test="status != null">"STATUS" = #{status}, </if>
			<if test="correctStatus != null">"CORRECT_STATUS" = #{correctStatus}, </if>
			<if test="organId != null">"ORGAN_ID" = #{organId}, </if>
			<if test="organName != null">"ORGAN_NAME" = #{organName}, </if>
			<if test="fraction != null">"FRACTION" = #{fraction}, </if>
			<if test="replyUserName != null">"REPLY_USER_NAME" = #{replyUserName}, </if>
			<if test="mainAnswerId != null">"MAIN_ANSWER_ID" = #{mainAnswerId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from XLGL_EXAM_ANSWER where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from XLGL_EXAM_ANSWER where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	
	<insert id="saveBatch" parameterType="com.css.app.xlgl.entity.XlglExamAnswer">
		insert into XLGL_EXAM_ANSWER
		(
			"id", 
			"EXAMINE_ID", 
			"EXAMINE_TOPIC_ID", 
			"TOPIC_COLUMN", 
			"TOPIC_TYPE", 
			"TOPIC_OPTION", 
			"TOPIC_RESULT", 
			"REPLY", 
			"REPLY_USER_ID", 
			"CREATE_DATE", 
			"UPDATE_DATE", 
			"STATUS", 
			"CORRECT_STATUS", 
			"ORGAN_ID", 
			"ORGAN_NAME", 
			"FRACTION", 
			"REPLY_USER_NAME", 
			"MAIN_ANSWER_ID"
		)
		values
		<foreach collection="list" item="item" index="index" open="" close="" separator=",">
		(
			#{item.id}, 
			#{item.examineId}, 
			#{item.examineTopicId}, 
			#{item.topicColumn}, 
			#{item.topicType}, 
			#{item.topicOption}, 
			#{item.topicResult}, 
			#{item.reply}, 
			#{item.replyUserId}, 
			#{item.createDate}, 
			#{item.updateDate}, 
			#{item.status}, 
			#{item.correctStatus}, 
			#{item.organId}, 
			#{item.organName}, 
			#{item.fraction}, 
			#{item.replyUserName}, 
			#{item.mainAnswerId}
		)
		</foreach>
	</insert>

</mapper>