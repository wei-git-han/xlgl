<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.dao.SurveyQuestionTopicOptionDao">

	<select id="queryObject" resultType="com.css.app.xlgl.entity.SurveyQuestionTopicOption">
		select * from SURVEY_QUESTION_TOPIC_OPTION where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.entity.SurveyQuestionTopicOption">
		select * from SURVEY_QUESTION_TOPIC_OPTION 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryOptionListByTopicId" resultType="com.css.app.xlgl.entity.SurveyQuestionTopicOption">
		select * from SURVEY_QUESTION_TOPIC_OPTION
		<where>
			QUESTION_TOPIC_ID = #{questionTopicId}
		</where>
		order by option_sequence
	</select>

	<select id="queryCountOptionList" resultType="com.css.app.xlgl.entity.SurveyQuestionTopicOption">
		select topopic.*,agswer.piao from ( select count(*) piao,SURVER_QUESTION_ID,QUESTION_TOPIC_ID,QUESTION_TOPIC_OPTION_ID from SURVEY_QUESTION_ANSWER
		group by SURVER_QUESTION_ID,QUESTION_TOPIC_OPTION_ID,QUESTION_TOPIC_ID ) agswer left join SURVEY_QUESTION_TOPIC_OPTION topopic
		on agswer.QUESTION_TOPIC_OPTION_ID = topopic.id  where 1=1
		<where>
			QUESTION_TOPIC_ID = #{questionTopicId}
		</where>
		order by option_sequence
	</select>

 	<select id="queryTotal" resultType="int">
		select count(*) from SURVEY_QUESTION_TOPIC_OPTION 
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.entity.SurveyQuestionTopicOption">
		insert into SURVEY_QUESTION_TOPIC_OPTION
		(
			"ID", 
			"OPTION_SEQUENCE", 
			"OPTION_CONTENT", 
			"CREATE_TIME", 
			"REMARK", 
			"QUESTION_TOPIC_ID"
		)
		values
		(
			#{id}, 
			#{optionSequence}, 
			#{optionContent}, 
			#{createTime}, 
			#{remark}, 
			#{questionTopicId}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.entity.SurveyQuestionTopicOption">
		update SURVEY_QUESTION_TOPIC_OPTION 
		<set>
			<if test="optionSequence != null">"OPTION_SEQUENCE" = #{optionSequence}, </if>
			<if test="optionContent != null">"OPTION_CONTENT" = #{optionContent}, </if>
			<if test="createTime != null">"CREATE_TIME" = #{createTime}, </if>
			<if test="remark != null">"REMARK" = #{remark}, </if>
			<if test="questionTopicId != null">"QUESTION_TOPIC_ID" = #{questionTopicId}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from SURVEY_QUESTION_TOPIC_OPTION where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from SURVEY_QUESTION_TOPIC_OPTION where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>