<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.dao.XlglWarCommonSportsFileDao">

	<select id="queryObject" resultType="com.css.app.xlgl.entity.XlglWarCommonSportsFile">
		select * from XLGL_WAR_COMMON_SPORTS_FILE where id = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.entity.XlglWarCommonSportsFile">
		select * from XLGL_WAR_COMMON_SPORTS_FILE 
		where 1 = 1
		<if test="type != null and type != ''">
			and TYPE = #{type}
		</if>
		order by CREATE_DATE desc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from XLGL_WAR_COMMON_SPORTS_FILE 
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.entity.XlglWarCommonSportsFile">
		insert into XLGL_WAR_COMMON_SPORTS_FILE
		(
			"id", 
			"FILE_ID", 
			"FILE_NAME", 
			"CREATE_USER", 
			"CREATE_DATE", 
			"UPDATE_USER", 
			"UPDATE_DATE", 
			"TYPE"
		)
		values
		(
			#{id}, 
			#{fileId}, 
			#{fileName}, 
			#{createUser}, 
			#{createDate}, 
			#{updateUser}, 
			#{updateDate}, 
			#{type}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.entity.XlglWarCommonSportsFile">
		update XLGL_WAR_COMMON_SPORTS_FILE 
		<set>
			<if test="fileId != null">"FILE_ID" = #{fileId}, </if>
			<if test="fileName != null">"FILE_NAME" = #{fileName}, </if>
			<if test="createUser != null">"CREATE_USER" = #{createUser}, </if>
			<if test="createDate != null">"CREATE_DATE" = #{createDate}, </if>
			<if test="updateUser != null">"UPDATE_USER" = #{updateUser}, </if>
			<if test="updateDate != null">"UPDATE_DATE" = #{updateDate}, </if>
			<if test="type != null">"TYPE" = #{type}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from XLGL_WAR_COMMON_SPORTS_FILE where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from XLGL_WAR_COMMON_SPORTS_FILE where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>