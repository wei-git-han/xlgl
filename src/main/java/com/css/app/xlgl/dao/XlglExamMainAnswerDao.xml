<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.dao.XlglExamMainAnswerDao">

	<select id="queryObject" resultType="com.css.app.xlgl.entity.XlglExamMainAnswer">
		select * from XLGL_EXAM_MAIN_ANSWER where id = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.entity.XlglExamMainAnswer">
		select * from XLGL_EXAM_MAIN_ANSWER 
		where 1=1
			<if test="examineId != null and examineId !=''">
			  and EXAMINE_ID = #{examineId}
			</if>
			<if test="makeupStatus != null and makeupStatus !=''">
			  and MAKEUP_STATUS = #{makeupStatus}
			</if>
			<if test="replyUserName != null and replyUserName !=''">
			  and REPLY_USER_NAME like '%'||#{replyUserName}||'%'
			</if>
			<if test="level != null and level !=''">
			  and LEVEL = #{level}
			</if>
			<if test="organName != null and organName !=''">
			  and ORGAN_NAME like '%'||#{organName}||'%'
			</if>
			<if test="organId != null and organId !=''">
			 and ORGAN_ID = #{organId}
			</if>
			<if test="replyUserId != null and replyUserId !=''">
			  and REPLY_USER_ID = #{replyUserId}
			</if>
			<if test="isNotExam != null and isNotExam !=''">
			  and ISNOTEXAM = #{isNotExam}
			</if>
			<if test="status != null and status !=''">
			  and STATUS = #{status}
			</if>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from XLGL_EXAM_MAIN_ANSWER 
		 where 1 = 1 
		 <if test="examineId != null and examineId != ''">
			and EXAMINE_ID = #{examineId}
		</if>
		<if test="isNotExam != null and isNotExam != ''">
			and ISNOTEXAM = #{isNotExam}
		</if>
		<if test="status != null and status !=''">
			  and STATUS = #{status}
		</if>
		<if test="level != null and level !=''">
			  and LEVEL = #{level}
		</if>
		
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.entity.XlglExamMainAnswer">
		insert into XLGL_EXAM_MAIN_ANSWER
		(
			"id", 
			"EXAMINE_ID", 
			"FRACTIONSUM", 
			"LEVEL", 
			"ORGAN_ID", 
			"ORGAN_NAME", 
			"REPLY_USER_ID", 
			"REPLY_USER_NAME", 
			"CREATE_DATE", 
			"UPDATE_DATE", 
			"MAKEUP_STATUS", 
			"MAKEUP_EXAMINE_ID",
			"CREATE_USER",
			"UPDATE_USER",
			"STATUS",
			"ISNOTEXAM",
			"LIANXI_TYPE"
		)
		values
		(
			#{id}, 
			#{examineId}, 
			#{fractionsum}, 
			#{level}, 
			#{organId}, 
			#{organName}, 
			#{replyUserId}, 
			#{replyUserName}, 
			#{createDate}, 
			#{updateDate}, 
			#{makeupStatus}, 
			#{makeupExamineId},
			#{createUser},
			#{updateUser},
			#{status},
			#{isNotExam},
			#{lianxiType}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.entity.XlglExamMainAnswer">
		update XLGL_EXAM_MAIN_ANSWER 
		<set>
			<if test="examineId != null">"EXAMINE_ID" = #{examineId}, </if>
			<if test="fractionsum != null">"FRACTIONSUM" = #{fractionsum}, </if>
			<if test="level != null">"LEVEL" = #{level}, </if>
			<if test="organId != null">"ORGAN_ID" = #{organId}, </if>
			<if test="organName != null">"ORGAN_NAME" = #{organName}, </if>
			<if test="replyUserId != null">"REPLY_USER_ID" = #{replyUserId}, </if>
			<if test="replyUserName != null">"REPLY_USER_NAME" = #{replyUserName}, </if>
			<if test="createDate != null">"CREATE_DATE" = #{createDate}, </if>
			<if test="updateDate != null">"UPDATE_DATE" = #{updateDate}, </if>
			<if test="makeupStatus != null">"MAKEUP_STATUS" = #{makeupStatus}, </if>
			<if test="makeupExamineId != null">"MAKEUP_EXAMINE_ID" = #{makeupExamineId},</if>
			<if test="createUser != null">"CREATE_USER" = #{createUser}, </if>
			<if test="updateUser != null">"UPDATE_USER" = #{updateUser}, </if>
			<if test="status != null">"STATUS" = #{status}, </if>
			<if test="lianxiType != null">"LIANXI_TYPE" = #{lianxiType}, </if>
			<if test="isNotExam != null">"ISNOTEXAM" = #{isNotExam}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from XLGL_EXAM_MAIN_ANSWER where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from XLGL_EXAM_MAIN_ANSWER where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<select id="queryUserCount" resultType="String">
		select IFNULL(count(distinct REPLY_USER_ID),0)  from XLGL_EXAM_MAIN_ANSWER
		 where 1 = 1 
		 <if test="examineId != null and examineId != ''">
			and EXAMINE_ID = #{examineId}
		</if>
		<if test="isNotExam != null and isNotExam != ''">
			and ISNOTEXAM = #{isNotExam}
		</if>
		<if test="status != null and status !=''">
			  and STATUS = #{status}
		</if>
	</select>
	
	<insert id="saveBatch" parameterType="com.css.app.xlgl.entity.XlglExamMainAnswer">
		insert into XLGL_EXAM_MAIN_ANSWER
		(
			"id", 
			"EXAMINE_ID", 
			"FRACTIONSUM", 
			"LEVEL", 
			"ORGAN_ID", 
			"ORGAN_NAME", 
			"REPLY_USER_ID", 
			"REPLY_USER_NAME", 
			"CREATE_DATE", 
			"UPDATE_DATE", 
			"MAKEUP_STATUS", 
			"MAKEUP_EXAMINE_ID",
			"CREATE_USER",
			"UPDATE_USER",
			"STATUS",
			"ISNOTEXAM"
		)
		values
		<foreach collection="list" item="item" index="index" open="" close="" separator=",">
		(
			#{item.id}, 
			#{item.examineId}, 
			#{item.fractionsum}, 
			#{item.level}, 
			#{item.organId}, 
			#{item.organName}, 
			#{item.replyUserId}, 
			#{item.replyUserName}, 
			#{item.createDate}, 
			#{item.updateDate}, 
			#{item.makeupStatus}, 
			#{item.makeupExamineId},
			#{item.createUser},
			#{item.updateUser},
			#{item.status},
			#{item.isNotExam}
		)
		</foreach>
	</insert>
	
	<select id="findListBySubjectId" resultType="com.css.app.xlgl.entity.XlglExamMainAnswer">
		select 
				e.EXAMINE_NAME as examineName , m.* 
		from 
			XLGL_EXAM_MAIN_ANSWER m
		join 
			XLGL_EXAM_EXAMINE e on e.id = m.EXAMINE_ID
		where m.STATUS  = '0'  and m.ISNOTEXAM = '1'
			<if test="examineId != null and examineId !=''">
			  and m.EXAMINE_ID = #{examineId}
			</if>
			<if test="makeupStatus != null and makeupStatus !=''">
			  and m.MAKEUP_STATUS = #{makeupStatus}
			</if>
			<if test="replyUserName != null and replyUserName !=''">
			  and m.REPLY_USER_NAME like '%'||#{replyUserName}||'%'
			</if>
			<if test="replyUserId != null and replyUserId !=''">
			  and m.REPLY_USER_ID = #{replyUserId}
			</if>
			<if test="isNotExam != null and isNotExam !=''">
			  and m.ISNOTEXAM = #{isNotExam}
			</if>
			<if test="examineSubjectName != null and examineSubjectName !=''">
			 	and e.EXAMINE_SUBJECT_NAME like '%'||#{examineSubjectName}||'%'
			</if>
		<if test="year != null and year !=''">
			and e.CREATE_DATE like '%'||#{year}||'%'
		</if>
			order by m.update_date desc
	</select>


	<select id="queryExamByUserIdAndExamId" resultType="com.css.app.xlgl.entity.XlglExamMainAnswer">
		select
				e.EXAMINE_NAME as examineName , m.*
		from
			XLGL_EXAM_MAIN_ANSWER m
		join
			XLGL_EXAM_EXAMINE e on e.id = m.EXAMINE_ID
		where m.STATUS  = '0'  and m.ISNOTEXAM = '1'
			<if test="examineId != null and examineId !=''">
			  and m.EXAMINE_ID = #{examineId}
			</if>
			<if test="makeupStatus != null and makeupStatus !=''">
			  and m.MAKEUP_STATUS = #{makeupStatus}
			</if>
			<if test="replyUserName != null and replyUserName !=''">
			  and m.REPLY_USER_NAME like '%'||#{replyUserName}||'%'
			</if>
			<if test="replyUserId != null and replyUserId !=''">
			  and m.REPLY_USER_ID = #{replyUserId}
			</if>
			<if test="examId != null and examId !=''">
				and m.EXAMINE_ID = #{examId}
			</if>
			<if test="isNotExam != null and isNotExam !=''">
			  and m.ISNOTEXAM = #{isNotExam}
			</if>
			<if test="examineSubjectName != null and examineSubjectName !=''">
			 	and e.EXAMINE_SUBJECT_NAME like '%'||#{examineSubjectName}||'%'
			</if>
		<if test="year != null and year !=''">
			and e.CREATE_DATE like '%'||#{year}||'%'
		</if>
			order by m.update_date desc
	</select>

	<select id="findListAllExam" resultType="com.css.app.xlgl.entity.XlglExamMainAnswer">
     select   distinct examineName as examineName,EXAMINE_ID as examineId from ( select  e.EXAMINE_NAME as examineName,  m.*
      from XLGL_EXAM_MAIN_ANSWER m join XLGL_EXAM_EXAMINE e on e.id = m.EXAMINE_ID where
        m.STATUS    = '0' and m.ISNOTEXAM = '1'  order by CREATE_DATE desc
        )
	</select>
	
	<select id="findExamByOrganId" resultType="com.css.app.xlgl.entity.XlglExamMainAnswer">
    select * from 
    	XLGL_EXAM_MAIN_ANSWER
    	where	
    		ORGAN_ID in
    		(
			select 
				id 
			from 
				BASE_APP_ORGAN 
			where 
				TREE_PATH like  '%'||#{organId}||'%'
			) 
			<if test="examId != null and examId !=''">
				and EXAMINE_ID = #{examId}
			</if>
			<if test="status != null and status !=''">
				and STATUS = #{status}
			</if>
			<if test="isnotexam != null and isnotexam !=''">
				and ISNOTEXAM = #{isnotexam}
			</if>
	</select>
	
</mapper>