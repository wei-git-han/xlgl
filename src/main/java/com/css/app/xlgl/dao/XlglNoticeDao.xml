<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.dao.XlglNoticeDao">

	<select id="queryObject" resultType="com.css.app.xlgl.entity.XlglNotice">
		select * from XLGL_NOTICE where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.entity.XlglNotice">
		select * from XLGL_NOTICE 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from XLGL_NOTICE 
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.entity.XlglNotice">
		insert into XLGL_NOTICE
		(
			"ID", 
			"RELEASE_TIME", 
			"TYPE", 
			"IS_TOP", 
			"TITLE", 
			"RELEASE_ORGANID", 
			"RELEASE_ORGAN", 
			"CONTENT", 
			"CONTENTTEXT"
		)
		values
		(
			#{id}, 
			#{releaseTime}, 
			#{type}, 
			#{isTop}, 
			#{title}, 
			#{releaseOrganid}, 
			#{releaseOrgan}, 
			#{content}, 
			#{contenttext}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.entity.XlglNotice">
		update XLGL_NOTICE 
		<set>
			<if test="releaseTime != null">"RELEASE_TIME" = #{releaseTime}, </if>
			<if test="type != null">"TYPE" = #{type}, </if>
			<if test="isTop != null">"IS_TOP" = #{isTop}, </if>
			<if test="title != null">"TITLE" = #{title}, </if>
			<if test="releaseOrganid != null">"RELEASE_ORGANID" = #{releaseOrganid}, </if>
			<if test="releaseOrgan != null">"RELEASE_ORGAN" = #{releaseOrgan}, </if>
			<if test="content != null">"CONTENT" = #{content}, </if>
			<if test="contenttext != null">"CONTENTTEXT" = #{contenttext}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from XLGL_NOTICE where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from XLGL_NOTICE where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>