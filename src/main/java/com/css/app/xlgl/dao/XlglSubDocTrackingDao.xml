<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.xlgl.dao.XlglSubDocTrackingDao">

	<select id="queryObject" resultType="com.css.app.xlgl.entity.XlglSubDocTracking">
		select * from XLGL_SUB_DOC_TRACKING where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.xlgl.entity.XlglSubDocTracking">
		select * from XLGL_SUB_DOC_TRACKING 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryListForPerson" resultType="com.css.app.xlgl.entity.XlglSubDocTracking">
		select * from XLGL_SUB_DOC_TRACKING where 1=1
		<if test="userId != null and userId != ''">
			 and RECEIVER_ID =#{userId}
		</if>
	</select>

	<select id="queryBmInfo" resultType="com.css.app.xlgl.entity.XlglSubDocTracking">
		select
        max ( case when a.baoming = '0' then count(id) end ) as baoming,
        max( case  when a.baoming = '1' then count(id) end)  as wbm    ,
        max( case  when a.baoming = '2' then count(id) end)  as qj
        from XLGL_SUB_DOC_TRACKING a where 1=1
        <if test="info !=null">
			and INFO_ID = #{info}
		</if>
		<if test="deptId != null">
			and REC_DEPT_ID = #{deptId}
		</if>
        group by baoming

	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from XLGL_SUB_DOC_TRACKING 
	</select>
	 
	<insert id="save" parameterType="com.css.app.xlgl.entity.XlglSubDocTracking">
		insert into XLGL_SUB_DOC_TRACKING
		(
			"ID", 
			"SENDER_NAME", 
			"SEN_DEPT_ID", 
			"UNDERTAKER", 
			"CREATED_TIME", 
			"RECEIVER_NAME", 
			"RECEIVER_ID", 
			"SUB_ID", 
			"IDEA_GROUP_ID", 
			"TRACKING_TYPE", 
			"SEN_DEPT_NAME", 
			"REMARK", 
			"REC_DEPT_ID", 
			"PREVIOUS_STATUS", 
			"SENDER_ID", 
			"REC_DEPT_NAME",
			"READ",
			"INFO_ID",
			"BAOMING",
			"REASON",
			"TITLE"
		)
		values
		(
			#{id}, 
			#{senderName}, 
			#{senDeptId}, 
			#{undertaker}, 
			#{createdTime}, 
			#{receiverName}, 
			#{receiverId}, 
			#{subId}, 
			#{ideaGroupId}, 
			#{trackingType}, 
			#{senDeptName}, 
			#{remark}, 
			#{recDeptId}, 
			#{previousStatus}, 
			#{senderId}, 
			#{recDeptName},
			#{read},
			#{infoId},
			#{baoming},
			#{reason},
			#{title}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.xlgl.entity.XlglSubDocTracking">
		update XLGL_SUB_DOC_TRACKING 
		<set>
			<if test="senderName != null">"SENDER_NAME" = #{senderName}, </if>
			<if test="senDeptId != null">"SEN_DEPT_ID" = #{senDeptId}, </if>
			<if test="undertaker != null">"UNDERTAKER" = #{undertaker}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="receiverName != null">"RECEIVER_NAME" = #{receiverName}, </if>
			<if test="receiverId != null">"RECEIVER_ID" = #{receiverId}, </if>
			<if test="subId != null">"SUB_ID" = #{subId}, </if>
			<if test="ideaGroupId != null">"IDEA_GROUP_ID" = #{ideaGroupId}, </if>
			<if test="trackingType != null">"TRACKING_TYPE" = #{trackingType}, </if>
			<if test="senDeptName != null">"SEN_DEPT_NAME" = #{senDeptName}, </if>
			<if test="remark != null">"REMARK" = #{remark}, </if>
			<if test="recDeptId != null">"REC_DEPT_ID" = #{recDeptId}, </if>
			<if test="previousStatus != null">"PREVIOUS_STATUS" = #{previousStatus}, </if>
			<if test="senderId != null">"SENDER_ID" = #{senderId}, </if>
			<if test="recDeptName != null">"REC_DEPT_NAME" = #{recDeptName}</if>
			<if test="read != null">"READ" = #{read}</if>
			<if test="infoId != null">"INFO_ID" = #{infoId}</if>
			<if test="baoming != null">"BAOMING" = #{baoming}</if>
			<if test="reason != null">"REASON" = #{reason}</if>
			<if test="title != null">"TITLE" = #{title}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from XLGL_SUB_DOC_TRACKING where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from XLGL_SUB_DOC_TRACKING where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>