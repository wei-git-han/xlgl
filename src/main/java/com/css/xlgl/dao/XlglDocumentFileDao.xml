<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.xlgl.dao.XlglDocumentFileDao">

	<select id="queryObject" resultType="com.css.xlgl.entity.XlglDocumentFile">
		select * from XLGL_DOCUMENT_FILE where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.xlgl.entity.XlglDocumentFile">
		select * from XLGL_DOCUMENT_FILE 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from XLGL_DOCUMENT_FILE 
	</select>
	
	<select id="queryMinSort" resultType="int">
		select  nvl(max(sort)+1,1) from XLGL_DOCUMENT_FILE where DOC_INFO_ID=#{docInfoId}
	</select>
	 
	<insert id="save" parameterType="com.css.xlgl.entity.XlglDocumentFile">
		insert into XLGL_DOCUMENT_FILE
		(
			"ID", 
			"SORT", 
			"CREATED_TIME", 
			"FILE_SERVER_STREAM_ID", 
			"DOWNLOAD_FORMAT_URL", 
			"FILE_SERVER_FORMAT_ID", 
			"DOC_INFO_ID", 
			"FILE_NAME"
		)
		values
		(
			#{id}, 
			#{sort}, 
			#{createdTime}, 
			#{fileServerStreamId}, 
			#{downloadFormatUrl}, 
			#{fileServerFormatId}, 
			#{docInfoId}, 
			#{fileName}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.xlgl.entity.XlglDocumentFile">
		update XLGL_DOCUMENT_FILE 
		<set>
			<if test="sort != null">"SORT" = #{sort}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="fileServerStreamId != null">"FILE_SERVER_STREAM_ID" = #{fileServerStreamId}, </if>
			<if test="downloadFormatUrl != null">"DOWNLOAD_FORMAT_URL" = #{downloadFormatUrl}, </if>
			<if test="fileServerFormatId != null">"FILE_SERVER_FORMAT_ID" = #{fileServerFormatId}, </if>
			<if test="docInfoId != null">"DOC_INFO_ID" = #{docInfoId}, </if>
			<if test="fileName != null">"FILE_NAME" = #{fileName}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from XLGL_DOCUMENT_FILE where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from XLGL_DOCUMENT_FILE where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>