<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.addbase.msg.dao.MsgTipDao">

	<select id="queryObject" resultType="com.css.addbase.msg.entity.MsgTip">
		select * from MSG where MSG_ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.addbase.msg.entity.MsgTip">
		select * from MSG where 1=1
		<if test="msgId != null">
			and MSG_ID like '%'||#{msgId}||'%'
		</if>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from MSG 
	</select>
	 
	<insert id="save" parameterType="com.css.addbase.msg.entity.MsgTip">
		insert into MSG
		(
			"MSG_ID", 
			"MSG_TITLE", 
			"MSG_CONTENT", 
			"MSG_REDIRECT"
		)
		values
		(
			#{msgId}, 
			#{msgTitle}, 
			#{msgContent}, 
			#{msgRedirect}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.addbase.msg.entity.MsgTip">
		update MSG 
		<set>
			<if test="msgTitle != null">"MSG_TITLE" = #{msgTitle}, </if>
			<if test="msgContent != null">"MSG_CONTENT" = #{msgContent}, </if>
			<if test="msgRedirect != null">"MSG_REDIRECT" = #{msgRedirect}</if>
		</set>
		where MSG_ID = #{msgId}
	</update>
	
	<delete id="delete">
		delete from MSG where MSG_ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from MSG where MSG_ID in 
		<foreach item="msgId" collection="array" open="(" separator="," close=")">
			#{msgId}
		</foreach>
	</delete>

</mapper>