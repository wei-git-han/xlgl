<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.addbase.appconfig.dao.BaseAppConfigDao">

	<select id="queryObject" resultType="com.css.addbase.appconfig.entity.BaseAppConfig">
		select * from BASE_APP_CONFIG where type = #{value}
	</select>

	<select id="queryList" resultType="com.css.addbase.appconfig.entity.BaseAppConfig">
		select * from BASE_APP_CONFIG 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
	<select id="typeList" resultType="com.css.addbase.appconfig.entity.BaseAppConfig">
		select * from BASE_APP_CONFIG where TYPE like '%'||#{value}||'%'
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from BASE_APP_CONFIG
	</select>
</mapper>